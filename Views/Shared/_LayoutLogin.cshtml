<!DOCTYPE html>
<html lang="fa">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"]</title>
  <link rel="stylesheet" href="~/css/Layout/_layout-login.css" asp-append-version="true" />
</head>
<body>
  @await Html.PartialAsync("~/Views/Shared/Header/_LoginHeaderPartial.cshtml")
  <style>
    .login-container { /* انیمیشن لود صفحات با قابلیت خاموش شد اگر پست هست */
      @(ViewData["NoAnimationIn"] as bool? == true ? "opacity: 1 !important; transform: none !important; transition: none !important;" : "opacity: 0; transform: translateY(20px);")
      transition: opacity 0.4s ease, transform 0.4s ease;
    }
    .login-container.visible {
      opacity: 1;
      transform: translateY(0);
    }
  </style>
  <main class="main">
    @RenderBody()
    @RenderSection("Scripts", required: false)
  </main>
</body>
</html>

<script>
  // بعد از لود موارد بالا یعنی بعد از لود تمام موارد صفحه لاگین کانتینر را نمایان میکنیم
  // در سی اس اس لاگین برای ویزیبل شدن لاگین کانتینر انیمیشن زدیم ولی در صفحه انتقال نزدیم تا درجا پیام انتقال را نشان دهد و برود
  // ویو دیتا نو انیمیشن این خودکار از اکشن های پست فرستاده میشه و بدون انیمیشن می کند
  window.addEventListener('load', () => {
    const main = document.querySelector('.login-container');
    if (main) {
      main.classList.add('visible');
    }
  });
</script>